# MinIO Configuration
# Generated by Ansible

# Root credentials
MINIO_ROOT_USER={{ minio_root_user }}
MINIO_ROOT_PASSWORD={{ minio_root_password }}

# Data directory
MINIO_VOLUMES={{ minio_data_dir }}

# API and Console ports
MINIO_API_PORT={{ minio_api_port }}
MINIO_CONSOLE_PORT={{ minio_console_port }}

# Server URL (f√ºr Konsole)
MINIO_SERVER_URL=http://{{ ansible_default_ipv4.address }}:{{ minio_api_port }}
MINIO_BROWSER_REDIRECT_URL=http://{{ ansible_default_ipv4.address }}:{{ minio_console_port }}

# Site configuration
MINIO_SITE_NAME={{ minio_site_name }}
MINIO_SITE_REGION={{ minio_site_region }}
